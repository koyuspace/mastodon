- content_for :header_tags do
  = render_initial_state

- content_for :content do
  .admin-wrapper
    .sidebar-wrapper
      .sidebar-wrapper__inner
        .sidebar
          = link_to root_path do
            = image_tag '/img/pb-icon.svg', height: 64, alt: 'Logo', style: 'margin-top:40px;margin-bottom:40px;'

          .sidebar__toggle
            .sidebar__toggle__logo
              = link_to root_path do
                = image_tag '/img/pb-icon.svg', height: 32, alt: 'Logo', style: 'margin-top: -16px;margin-left: -24px;'

            = link_to '#', class: 'sidebar__toggle__icon' do
              = fa_icon 'bars'

          = render_navigation

    .content-wrapper
      .content
        .content-heading
          - if content_for?(:heading)
            = yield :heading
          - else
            %h2= yield :page_title

          - if :heading_actions
            .content-heading-actions
              = yield :heading_actions

        = render 'application/flashes'

        = yield

    .sidebar-wrapper.sidebar-wrapper--empty

= render template: 'layouts/application'
